<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@drawable/shape_employ_button"
    android:orientation="vertical">

    <TextView
        android:padding="26dp"
        android:textSize="26dp"
        android:textColor="@color/white"
        android:text="设置服务IP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="云服务地址&#32;:"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/edt_server_ip_0"
            style="@style/net_ip_edt" />

        <TextView
            style="@style/net_ip_dot"
            android:text="." />

        <EditText
            android:id="@+id/edt_server_ip_1"
            style="@style/net_ip_edt" />

        <TextView
            style="@style/net_ip_dot"
            android:text="." />

        <EditText
            android:id="@+id/edt_server_ip_2"
            style="@style/net_ip_edt" />

        <TextView
            style="@style/net_ip_dot"
            android:text="." />

        <EditText
            android:id="@+id/edt_server_ip_3"
            style="@style/net_ip_edt" />

        <TextView
            style="@style/net_ip_dot"
            android:text=":" />

        <EditText
            android:id="@+id/edt_server_port"
            style="@style/net_ip_edt"
            android:hint="端口号"
            android:maxLength="5" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="资源地址&#32;:"
            android:textSize="26dp" />

        <TextView
            android:textColor="@color/white"
            android:textSize="26dp"
            android:text="http://"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edt_res_ip_0"
            style="@style/net_ip_edt" />

        <TextView
            style="@style/net_ip_dot"
            android:text="." />

        <EditText
            android:id="@+id/edt_res_ip_1"
            style="@style/net_ip_edt" />

        <TextView
            style="@style/net_ip_dot"
            android:text="."/>

        <EditText
            android:id="@+id/edt_res_ip_2"
            style="@style/net_ip_edt" />

        <TextView
            style="@style/net_ip_dot"
            android:text="."/>

        <EditText
            android:id="@+id/edt_res_ip_3"
            style="@style/net_ip_edt" />

        <TextView
            style="@style/net_ip_dot"
            android:text=":"/>

        <EditText
            android:id="@+id/edt_res_port"
            style="@style/net_ip_edt"
            android:hint="端口号"
            android:maxLength="5" />
    </LinearLayout>

    <TextView
        android:maxLines="1"
        android:paddingBottom="20dp"
        android:text="注意：修改地址成功后将会重启应用"
        android:id="@+id/tv_net_tips"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:textSize="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:background="@drawable/selector_btn_take_photo"
            android:id="@+id/btn_net_cancel"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="26dp" />

        <Button
            android:textColor="@color/white"
            android:background="@drawable/selector_btn_take_photo"
            android:id="@+id/btn_net_confirm"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="确认修改"
            android:textSize="26dp" />

    </LinearLayout>

</LinearLayout>